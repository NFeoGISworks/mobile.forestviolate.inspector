<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <header
        android:title="@string/general_settings"
        android:summary="@string/general_settings_summary"
        android:fragment="com.nextgis.forestinspector.fragment.FIPreferenceFragment"
        >
        <extra
            android:name="com.nextgis.mobile.PREFS_SETTINGS"
            android:value="com.nextgis.mobile.PREFS_GENERAL"
            />
    </header>

    <header
        android:title="@string/map_settings"
        android:summary="@string/map_settings_summary"
        android:fragment="com.nextgis.forestinspector.fragment.FIPreferenceFragment"
        >
        <extra
            android:name="com.nextgis.mobile.PREFS_SETTINGS"
            android:value="com.nextgis.mobile.PREFS_MAP"
            />
    </header>

    <header
        android:title="@string/location"
        android:summary="@string/location_summary"
        android:fragment="com.nextgis.forestinspector.fragment.FIPreferenceFragment"
        >
        <extra
            android:name="com.nextgis.mobile.PREFS_SETTINGS"
            android:value="com.nextgis.mobile.PREFS_LOCATION"
            />
    </header>

    <header
        android:title="@string/sync_settings"
        android:summary="@string/sync_settings_summary"
        >
        <intent
            android:action="com.nextgis.mobile.PREFS_NGW"
            android:targetClass="com.nextgis.forestinspector.activity.SyncSettingsActivity"
            android:targetPackage="com.nextgis.forestinspector"
            />
    </header>

</preference-headers>
