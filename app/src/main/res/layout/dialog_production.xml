<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp">

    <TextView style="@style/normal_text"
              android:text="@string/species_detail"
              android:id="@+id/species_desc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/species"
        android:inputType="text"/>

    <TextView style="@style/normal_text"
              android:text="@string/cat_detail"
              android:id="@+id/cat_desc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cat"
        android:inputType="text"/>

    <!-- length -->
    <TextView style="@style/normal_text"
              android:text="@string/length_detail"
              android:id="@+id/length_desc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/length"
        android:inputType="number"/>

    <!-- thickness -->
    <TextView style="@style/normal_text"
              android:text="@string/thickness_detail"
              android:id="@+id/thickness_desc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thickness"
        android:inputType="number"/>

    <!-- count -->
    <TextView style="@style/normal_text"
              android:text="@string/count_detail"
              android:id="@+id/count_desc"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/count"
        android:inputType="numberDecimal"/>

</LinearLayout>