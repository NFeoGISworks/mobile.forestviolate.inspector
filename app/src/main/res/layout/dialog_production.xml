<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:focusableInTouchMode="true"
    >
    <!--http://stackoverflow.com/a/1662088/4727406-->

    <TextView
        android:text="@string/coordinates"
        style="@style/normal_text"
        />

    <include
        layout="@layout/fragment_location_panel"/>

    <TextView
        android:id="@+id/species_desc"
        android:text="@string/species_detail"
        style="@style/normal_text"
        />

    <EditText
        android:id="@+id/species"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/cat_desc"
        android:text="@string/cat_detail"
        style="@style/normal_text"
        />

    <EditText
        android:id="@+id/cat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <!-- length -->

    <TextView
        android:id="@+id/length_desc"
        android:text="@string/length_detail"
        style="@style/normal_text"
        />

    <EditText
        android:id="@+id/length"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />

    <!-- thickness -->

    <TextView
        android:id="@+id/thickness_desc"
        android:text="@string/thickness_detail"
        style="@style/normal_text"
        />

    <EditText
        android:id="@+id/thickness"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />

    <!-- count -->

    <TextView
        android:id="@+id/count_desc"
        android:text="@string/count_detail"
        style="@style/normal_text"
        />

    <EditText
        android:id="@+id/count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        />

</LinearLayout>
