<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    >
    <!--http://stackoverflow.com/a/1662088-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        >

        <!-- coordinates -->

        <TextView
            android:id="@+id/coordinates_text"
            android:text="@string/coordinates"
            style="@style/dialog_desc_text"
            />

        <include
            layout="@layout/fragment_location_panel"
            />

        <!-- start date & time -->

        <TextView
            android:text="@string/note_start_date"
            style="@style/dialog_desc_text"
            />

        <com.nextgis.maplibui.control.DateTime
            android:id="@+id/start_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/DatePickSpinner"
            />

        <!-- end date & time -->

        <TextView
            android:text="@string/note_end_date"
            style="@style/dialog_desc_text"
            />

        <com.nextgis.maplibui.control.DateTime
            android:id="@+id/end_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/DatePickSpinner"
            />

        <!-- note text -->

        <TextView
            android:text="@string/note_text"
            style="@style/dialog_desc_text"
            />

        <EditText
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:minLines="3"
            android:hint="@string/note_hint"
            />

    </LinearLayout>

</LinearLayout>
