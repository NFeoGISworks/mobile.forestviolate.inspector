<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <include
        layout="@layout/actionbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="?attr/colorPrimary"
        android:gravity="bottom"
        app:tabMode="fixed"
        app:tabSelectedTextColor="?attr/tabTextColor"
        app:tabTextColor="?attr/tabSecondaryTextColor"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorColor="?attr/colorAccent"
        android:elevation="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nextgis.forestinspector.util.AppViewPager
                                       android:id="@+id/pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       tools:context=".MainActivity"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            fab:fab_addButtonColorNormal="?attr/colorPrimary"
            fab:fab_addButtonColorPressed="?attr/colorAccent"
            fab:fab_addButtonPlusIconColor="@android:color/white"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            fab:fab_labelStyle="@style/menu_labels_style"
            >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_indictment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="?attr/colorPrimary"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_action_edit_light"
                fab:fab_colorPressed="?attr/colorAccent"
                fab:fab_title="@string/action_indictment"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="?attr/colorPrimary"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_action_image_nature_people"
                fab:fab_colorPressed="?attr/colorAccent"
                fab:fab_title="@string/action_sheet"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_field_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="?attr/colorPrimary"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_action_fieldworks_bw"
                fab:fab_colorPressed="?attr/colorAccent"
                fab:fab_title="@string/action_field_works"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="?attr/colorPrimary"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_action_action_bookmark_outline"
                fab:fab_colorPressed="?attr/colorAccent"
                fab:fab_title="@string/action_notes"
                />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>

</LinearLayout>