<resources>

    <attr name="tabSecondaryTextColor" format="reference"/>
    <attr name="coordinatesPickerBackground" format="reference"/>
    <attr name="photoTableItemBackgroundColor" format="reference"/>
    <attr name="photoDescBackgroundColor" format="reference"/>
    <attr name="docItemBackgroundForCurrentUser" format="reference"/>
    <attr name="tableHeaderBackgroundColor" format="reference"/>
    <attr name="tableBodyBackgroundColor" format="reference"/>
    <attr name="tableCellBackgroundColor" format="reference"/>
    <attr name="ic_action_map" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.NextGIS.AppCompat.Light">
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSecondaryTextColor">@color/tabSecondaryTextColor</item>
        <item name="coordinatesPickerBackground">@drawable/ic_maps_pin_light</item>
        <item name="photoTableItemBackgroundColor">@color/color_grey_000</item>
        <item name="photoDescBackgroundColor">@color/color_grey_200</item>
        <item name="docItemBackgroundForCurrentUser">@color/color_grey_300</item>
        <item name="tableHeaderBackgroundColor">@color/color_grey_300</item>
        <item name="tableBodyBackgroundColor">@color/color_grey_900</item>
        <item name="tableCellBackgroundColor">@color/color_grey_050</item>
        <item name="ic_action_map">@drawable/ic_maps_pin_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.NextGIS.AppCompat.Dark">
        <item name="tabTextColor">@color/tabTextColor</item>
        <item name="tabSecondaryTextColor">@color/tabSecondaryTextColor</item>
        <item name="coordinatesPickerBackground">@drawable/ic_maps_pin_dark</item>
        <item name="photoTableItemBackgroundColor">@color/color_grey_800</item>
        <item name="photoDescBackgroundColor">@color/color_grey_700</item>
        <item name="docItemBackgroundForCurrentUser">@color/color_grey_700</item>
        <item name="tableHeaderBackgroundColor">@color/color_grey_700</item>
        <item name="tableBodyBackgroundColor">@color/color_grey_600</item>
        <item name="tableCellBackgroundColor">@color/color_grey_800</item>
        <item name="ic_action_map">@drawable/ic_maps_pin_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="status_panel">
        <item name="android:textViewStyle">@style/status_panel_text</item>
    </style>

    <style name="status_panel_text"
           parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="status_panel_text_land"
           parent="status_panel_text">
        <item name="android:singleLine">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/textColor.Dark</item>
    </style>


    <style name="description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="paragraph_text" parent="normal_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="doc_num_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="doc_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="dialog_desc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="table_warning">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoordinatesPicker" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">?attr/coordinatesPickerBackground</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
